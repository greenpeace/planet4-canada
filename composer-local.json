{
  "name": "planet4-canada/planet4-canada",
  "description": "Planet4 GP Mena website configuration",
  "license": "MIT",
  "require": {
	  "greenpeace/planet4-child-theme-canada" : "0.*",
	  "wpackagist-theme/twentyseventeen":"2.0"
  },
  "scripts": {
    "core:language": "wp language core install fr_CA",
    "install:plugin-wpml": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/sitepress-multilingual-cms.4.1.3.zip",
    "install:plugin-wpml-management": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wpml-translation-management.2.7.2.zip",
    "install:plugin-wpml-searchwp": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/searchwp-wpml-1.4.0.zip",
    "site:custom": [
      "@core:language",
      "@install:plugin-wpml",
      "@install:plugin-wpml-management",
      "@install:plugin-wpml-searchwp"
    ]
  }
}
